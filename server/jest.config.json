{
  "collectCoverageFrom": [
    "**/*.(t|j)s",
    "!**/*.decorator.(t|j)s",
    "!**/*.dto.(t|j)s",
    "!**/*.entity.(t|j)s",
    "!**/*.mock.(t|j)s",
    "!**/*.model.(t|j)s",
    "!**/*.module.(t|j)s",
    "!**/*main.(t|j)s"
  ],
  "coverageDirectory": "../coverage",
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "./src",
  "testEnvironment": "node",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}
